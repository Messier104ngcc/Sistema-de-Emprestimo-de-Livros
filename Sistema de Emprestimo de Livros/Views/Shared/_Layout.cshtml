<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Biblioteca Virtual</title>
    <link rel="icon" type="image/png" href="/img/logo/logo.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Sistema_de_Emprestimo_de_Livros.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="https://cdn.datatables.net/v/dt/dt-2.1.6/datatables.min.css" rel="stylesheet">
    <link href="css/sb-admin-2.min.css" rel="stylesheet">
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    @RenderSection("Styles", required: false)
</head>
<body style="background-color:#A37F4F">
    <header class="sticky-top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow p-2" style="background-color: #413524 ">
            <img src="/img/logo/logo.png" class="img-fluid" alt="Logo" style="width: 5%; height: 5%; " />
            <div class="container-fluid">
                <a id="title" class="navbar-brand text-light" asp-controller="Home" asp-action="Index">Biblioteca Virtual</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav navbar-right">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle h5 text-light" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Painel Administrativo
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item h6" asp-controller="Funcionario" asp-action="Index">Usuarios</a></li>
                                <div class="dropdown-divider"></div>
                                <li><a class="dropdown-item h6" asp-controller="Cliente" asp-action="Index" asp-route-id="0">Clientes</a></li>
                                <div class="dropdown-divider"></div>
                                <li><a class="dropdown-item h6" asp-controller="Livros" asp-action="Index">Livros</a></li>
                                <div class="dropdown-divider"></div>
                                <li><a class="dropdown-item h6" asp-controller="Relatorio" asp-action="Index">Relatórios</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="pb-3 mt-5 ml-5 mr-5">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Sistema_de_Emprestimo_de_Livros - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/v/dt/dt-2.1.6/datatables.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
